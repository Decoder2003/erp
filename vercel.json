{
    "builds": [
        {
            "src": "erp/wsgi.py",
            "use": "@vercel/python",
            "config": {"maxLambdaSize": "15mb", "runtime": "python3.9"}
        },
        {
            "src": "build_files.sh",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "staticfiles_build"
            }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/staic/$1" 
        },
        {
            "src": "/(.*)",
            "dest": "erp/wsgi.py"
        }
    ]
}